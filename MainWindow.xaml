<Window x:Class="Militaria_Gruszecki_Roman.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Militaria_Gruszecki_Roman"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Button x:Name="Open_File_Button" Content="Otwórz XML" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Click="Open_File_Button_Click"/>
        <Button x:Name="open_xlsx_button" Content="Otwórz xlsx" HorizontalAlignment="Left" Margin="99,10,0,0" VerticalAlignment="Top" Click="open_xlsx_button_Click"/>
        <DataGrid x:Name="data_excel" d:ItemsSource="{d:SampleData ItemCount=5}" Margin="0,35,0,0"/>
        <Button x:Name="Save_button" Content="Zapis" HorizontalAlignment="Left" Margin="169,10,0,0" VerticalAlignment="Top" Click="Save_button_Click"/>
        <Button x:Name="change_button" Content="zmień tablice" HorizontalAlignment="Left" Margin="711,10,0,0" VerticalAlignment="Top" Click="change_button_Click"/>
        <DataGrid x:Name="data_excel2" d:ItemsSource="{d:SampleData ItemCount=5}" Margin="0,35,0,0" Visibility="Hidden"/>

    </Grid>
</Window>
